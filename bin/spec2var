#!/bin/bash

for opt in "$@"; do
   optarg="$(expr "${opt}" : '[^=]*=\(.*\)')"
   case "${opt}" in
      --spec=*) SPEC="${optarg}" ;;
      --arches=*) ARCHES="${optarg}" ;;
   esac
done

for arch in ${ARCHES//,/ } ; do
   macros="/usr/lib/rpm/macros:macros/${arch}:macros/shared:macros/rust:macros/cargo-external"

   # Build-time dependencies are associated with all subpackages.
   buildrequires="$(rpmspec --macros "${macros}" --query --buildrequires "${SPEC}" | awk '/thar/ {printf "$(%s) ",$0} END {print ""}')"
   buildrequires="${buildrequires%"${buildrequires##*[![:space:]]}"}"

   # Emit variables for package names that resolve to all their dependencies.
   rpmspec --macros "${macros}" --query --queryformat="%{NAME} = \$(OUTPUT)/%{NAME}-%{VERSION}-%{RELEASE}.%{ARCH}.rpm[ \$(%{REQUIRES})] ${buildrequires}\n" "${SPEC}"
done
